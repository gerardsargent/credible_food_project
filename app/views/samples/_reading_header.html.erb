<div class="container reading-header">

  <div class="row">

    <div class="col-md-12">

      <h4>Location Entry</h4>

    <div class="reading-header-container">
      <table class="reading-header">
        <thead>
          <tr>
            <th>Client</th>
            <th>Organisation</th>
            <th>Date collected</th>
            <th>Date observed</th>
            <th>Location</th>
            <th>Sample Type</th>
            <th>Plants present</th>
            <th>Plants desired</th>
            <th>LT ID</th>
            <th>Customer ID</th>
            <th>Other notes</th>
            <th>Observed by</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
            <tr>
              <td><%= @reading.client %></td>
              <td><%= @reading.organisation %></td>
              <td><%= @reading.date_collected %></td>
              <td><%= @reading.date_observed %></td>
              <td><%= @reading.location %></td>
              <td><%= @reading.sample_type %></td>
              <td><%= @reading.plants_present %></td>
              <td><%= @reading.plants_desired %></td>
              <td><%= @reading.lt_id %></td>
              <td><%= @reading.cust_id %></td>
              <td><%= @reading.other_notes %></td>
              <td><%= @reading.observed_by %></td>
              <td><%= link_to 'Edit', edit_reading_path(@reading) %></td>
              <td><%= link_to 'Back', readings_path  %></td>
            </tr>
        </tbody>
      </table>

    </div>
    
    </div>

  </div>

</div>