        <% @sample.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <tr class="sample_input">
      <td>
      <%=s.label :reading_number, @sample.reading_number%>
      </td>

      <td>
        <%=s.text_field :bacterial_number%>
      </td>
      <td>
        <%=s.text_field :coverslip%>
      </td>
      <td>
        <%=s.text_field :bacterial_size_shape%>
      </td>
      <td>
        <%=s.text_field :bacterial_dilution%>
      </td>
      <td>
        <%=s.text_field :actinobacteria%>
      </td>
      <td>
        <%=s.text_field :actinobacteria_dilution%>
      </td>
      <td>
        <%=s.text_field :fungi%>
      </td>
      <td>
        <%=s.text_field :fungi_diameter%>
      </td>
      <td>
        <%=s.text_field :fungi_colour%>
      </td>
      <td>
        <%=s.text_field :fungi_dilution%>
      </td>
      <td>
        <%=s.text_field :oomycetes%>
