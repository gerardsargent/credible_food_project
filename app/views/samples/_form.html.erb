      </td>
      <td>
        <%=s.text_field :amoebae%>
      </td>
      <td>
        <%=s.text_field :amoebae_dilution%>
      </td>
      <td>
        <%=s.text_field :ciliates%>
      </td>
      <td>
        <%=s.text_field :ciliates_dilution%>
      </td>
      <td>
        <%=s.text_field :nematodes%>
      </td>
      <td>
        <%=s.text_field :nematodes_dilution%>
      </td>
