        <td><%=s.bacterial_size_shape%></td>
        <td><%=s.bacterial_dilution%></td>
        <td><%=s.actinobacteria%></td>
        <td><%=s.actinobacteria_dilution%></td>    
        <td><%=s.fungi%></td>
        <td><%=s.fungi_diameter%></td>
        <td><%=s.fungi_colour%></td>
        <td><%=s.fungi_dilution%></td>
