    <hr >
    <div class="sample_submit"><%= s.submit %></div>
    <hr >

    <hr >

    <div class="second_section">

    <!--Comments Section-->

    <table class="notes">

      <tr>
        <th>Notes/Questions</th>
      </tr>

      <tr>
        <th>
        Feel free to write any
        further information you
        feel important or
        useful, and any
        questions you might
        have that may be useful for
        future reference.
        </th>
      </tr>

      <tr>
        <td><%=s.text_field :notes%></td>
      </tr>
      
    </table>
    <% end %>

  </table>

