  <% if samples.blank? %>
    <div class="container centre-text">
      <h3>No sample records have been uploaded that are associated with this particular reading. Please upload the first sample below...</h3>
    </div>
    <div class="container">
      <div class="flex-centre"
        <div class="sample-history-item"><%= link_to 'New Sample', new_reading_sample_path(@reading) %></div>
      </div>
    </div>
  <% else %>

    <h3>Sample Report</h3>

    <div class="report-container">

      <table class="sample-report">      
          <th>Organisms in the Soil Food Web</th>
          <th>Units</th>
          <tr>
              <td><strong>Bacterial</strong></td>
              <td>μg/g or mL</td>
          </tr>
          <tr>
            <td><strong>Actinobacteria</strong></td>
            <td>μg/g or mL</td>
          </tr>
              <tr>
            <td><strong>Fungi</strong></td>
            <td>μg/g or mL</td>
        </tr>
        <tr>
            <td><strong>Oomycetes</strong></td>
            <td>μg/g or mL</td>
        </tr>
        <tr>
            <td><strong>Flagellate (Protozoa)</strong></td>
            <td>Per gram</td>
        </tr>
        <tr>
            <td><strong>Amoebae (Protozoa)</strong></td>
            <td>Per gram</td>
        </tr>
        <tr>
            <td><strong>Ciliates (Protozoa)</strong></td>
            <td>Per gram</td>
        </tr>
        <tr>
            <td><strong>Bacterial (Nematodes)</strong></td>
            <td>Per gram</td>
        </tr>
        <tr>
            <td><strong>Fungal (Nematodes)</strong></td>
            <td>Per gram</td>
        </tr>
        <tr>
            <td><strong>Root (Nematodes)</strong></td>
            <td>Per gram</td>
        </tr>
        <tr>
            <td><strong>Predatory (Nematodes)</strong></td>
            <td>Per gram</td>
        </tr>
        <tr>
            <td><strong>Nematode Overall</strong></td>
            <td>Per gram</td>
        </tr>
        <tr>
            <td><strong>Fungal:bacterial ratio F:B</strong></td>
            <td> </td>
        </tr>
      </table>

      <table class="sample-report">
          <thead>
            <tr>
              <th>Sample 1</th>
              <th>Sample 2</th>
              <th>Sample 3</th>
              <th>Sample 4</th>
            </tr>
          </thead>
          <% @samples.collect{|s| [s.micrograms, s.actinobacteria_micrograms, s.fungi_micrograms, s.oomycetes_micrograms, s.flagellate_protozoa, s.amoebae_protozoa, s.ciliates_protozoa, s.bacterial_nematodes, s.fungal_nematodes, s.predator_nematodes, s.root_nematodes, s.nematodes, s.fb_biomass_ratio]}.transpose.each do|line| %>
            <tr>
              <% line.each do |cell| %>
                <td><%= cell %></td>
              <% end %>
            </tr>
          <% end %>
            <tr>
              <% samples.each do |sample| %>
                <td><!-- CRUD Options -->
                    <div class="sample-history-inner crud-options">
                      <div class="sample-history-item"><%= link_to 'View Sample', reading_sample_path(@reading, sample) %></div>
                      <div class="sample-history-item"><%= link_to 'Edit Sample', new_reading_sample_path(@reading, sample) if logged_in?(:site_admin) %></div>
                    </div> <!-- End of CRUD div -->
                </td>
              <% end %> <!-- End of sample loop -->
          </tr>
      </table>

    </div>

    <br>
    

    <div class="container">
      <div class="flex-centre"
        <div class="sample-history-item"><%= link_to 'New Sample', new_reading_sample_path(@reading) %></div>
      </div>
    </div>

    <% samples.each do |sample| %>

      <div class="container">

        <!-- Header -->
        <div class="sample-history flex-wrap sample-summary">

          <div class="sample-history-inner">

            <div class="sample-history-item">
              <h3>User ID:</h3>
              <p><%= sample.user_id %></p>
            </div>

            <div class="sample-history-item">
              <h3>Sample ID:</h3>
              <p><%= sample.sample_id %></p>
            </div>

            <div class="sample-history-item">
              <h3>Reading Number:</h3>
              <p><%= sample.reading_number %></p>
            </div>
            
          </div>

          <div class="sample-history-inner">
            <div class="sample-history-item">
              <h3>Date taken:</h3>
              <p><%= sample.sample_date %></p>
            </div>

            <div class="sample-history-item">
              <h3>GPS Location of Sample:</h3>
              <p><%= sample.gps %></p>
            </div>

          </div> <!-- End of sample-history-inner div -->

          <!-- This is where the old code was originally -->

          <!-- CRUD Options -->
          <div class="sample-history-inner crud-options">
            <div class="sample-history-item"><%= link_to 'View Sample', new_reading_sample_path(@reading) %></div>
            <div class="sample-history-item"><%= link_to 'Edit Sample', edit_reading_sample_path(@reading) if logged_in?(:site_admin) %></div>
            
          </div> <!-- End of CRUD div -->

        </div> <!-- End of sample-history div -->
        
      </div> <!-- End of container div -->

    <% end %> <!-- End of sample loop -->
  
  <% end %> <!-- End of if statement -->